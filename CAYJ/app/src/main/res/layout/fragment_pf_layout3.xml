<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_pdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="特价酬宾"
        android:textSize="20sp"
        android:textColor="#ff4081"
        />
    <View
        android:id="@+id/v"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <ImageView
        android:id="@+id/iv_content_pf"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:layout_margin="10dp"
        android:maxHeight="150dp"
        />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:id="@+id/tv_content_pf"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:text="白盒测试方"
                android:textColor="#000"
                android:textSize="26sp" />

                <TextView
                    android:id="@+id/tv_value_pf"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="30dp"
                    android:text="S880"
                    android:textColor="#f00"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/tv_pass_value_pf"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/tv_value_pf"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="10dp"
                    android:text="S880"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_buy"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_petsmaintain_shopping"
                    />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
